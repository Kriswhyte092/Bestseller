<body>
    <div class="product-info-container">
        <!-- Left: Image slider -->
        <div class="product-gallery-container">
            <div class="product-gallery" id="product-gallery">
                {% for url in image_urls %}
                    <img src="{{ url }}" alt="{{ name }}">
                {% endfor %}
            </div>
        </div>

        <!-- Right: Product details -->
        <div class="product-details">
            <h1>{{ name }}</h1>

            <!-- Color Variants -->
            <div class="product-section">
                <h2>Color Variants:</h2>
                <ul>
                    {% for color, hex in colors.items %}
                    <li>
                        <button
                            class="color-button"
                            style="background-color: {{ hex }}"
                            onclick="fetchInventory('{{ color }}')"
                        >
                            {{ color }}
                        </button>
                    </li>
                    {% endfor %}
                </ul>
            </div>

            <!-- Inventory Details -->
            <div id="inventory-details">
                <h2>Inventory Details:</h2>
                <p>Select a variant to see inventory.</p>
            </div>
        </div>
    </div>

    <script>
        function fetchInventory(color) {
            fetch(`/get-variant-inventory/?variant_id=${encodeURIComponent(color)}`)
                .then(response => response.json())
                .then(data => {
                    const inventoryDetails = document.getElementById("inventory-details");
                    if (data.inventory && data.inventory.length > 0) {
                        const inventoryHtml = data.inventory
                            .map(inv => `<p>${inv.store}: ${inv.quantity}</p>`)
                            .join("");
                        inventoryDetails.innerHTML = `<h2>Inventory for ${color}:</h2>` + inventoryHtml;
                    } else {
                        inventoryDetails.innerHTML = `<p>No inventory available for ${color}.</p>`;
                    }
                })
                .catch(error => console.error("Error fetching inventory:", error));
        }
    </script>
